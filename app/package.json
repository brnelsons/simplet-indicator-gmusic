{
  "name": "simplet-indicator-gmusic",
  "productName": "Simplet Indicator GMusic",
  "version": "2.0.1",
  "license": "GPL-3.0",
  "description": "Simple Google Music Indicator Applet",
  "repository" : {
    "type" : "git",
    "url" : "https://github.com/brnelsons/simplet-indicator-gmusic.git"
  },
  "dependencies": {
    "electron-positioner": "^3.0.0",
    "electron-settings": "^1.0.4",
    "angular": "^1.5.8",
    "menubar": "^5.2.3",
    "screen": "0.2.10",
    "moment": "^2.17.1",
    "path": "0.12.7"
  },
  "devDependencies": {
    "electron-packager": "^5.1.0",
    "electron-prebuilt": "^0.36.0"
  },
  "main": "main.js",
  "build": {
    "app-bundle-id": "com.github.brnelsons.simplet.indicator.gmusic",
    "app-category-type": "public.app-category.music",
    "iconUrl": "https://github.com/brnelsons/simplet-indicator-gmusic/blob/master/res/images/gmusic_dark_desktop.ico"
  },
  "scripts": {
    "build-linux-32": "electron-packager . GMusic --platform=linux --out='../build' --arch=ia32 --name=GMusic --version=0.36.0 --icon=Icon.icns --overwrite --ignore=\"userdata\" --version-string.FileDescription=\"GMusic\"",
    "build-linux-64": "electron-packager . GMusic --platform=linux --out='../build' --arch=x64 --name=GMusic --version=0.36.0 --icon=Icon.icns --overwrite --ignore=\"userdata\" --version-string.FileDescription=\"GMusic\"",
    "build-mac-32": "electron-packager . GMusic --platform=darwin --out='../build' --arch=ia32 --name=GMusic --version=0.36.0 --icon=Icon.icns --overwrite --ignore=\"userdata\" --version-string.FileDescription=\"GMusic\"",
    "build-mac-64": "electron-packager . GMusic --platform=darwin --out='../build' --arch=x64 --name=GMusic --version=0.36.0 --icon=Icon.icns --overwrite --ignore=\"userdata\" --version-string.FileDescription=\"GMusic\"",
    "build-windows-32": "electron-packager . GMusic --platform=win32 --out=\"../build\" --arch=ia32 --name=GMusic --version=0.36.0 --icon=Icon.icns --overwrite --ignore=\"userdata\" --version-string.FileDescription=\"GMusic\"",
    "build-windows-64": "electron-packager . GMusic --platform=win32 --out=\"../build\" --arch=x64 --name=GMusic --version=0.36.0 --icon=Icon.icns --overwrite --ignore=\"userdata\" --version-string.FileDescription=\"GMusic\"",
    "build-all": "electron-packager . GMusic --all --out=\"../build\" --name=GMusic --version=0.36.0 --icon=Icon.icns --overwrite --ignore=\"userdata\" --version-string.FileDescription=\"GMusic\"",
    "start": "electron . --enable-transparent-visuals --disable-gpu  --version-string.FileDescription=GMusic --name=GMusic"
  }
}
